{
    "name": "Zen Trello",
    "version": "1.0",
    "description": "✨ Gets rid of annoying stuff ✨",
    "manifest_version": 3,

    "icons": {
      "16": "images/16.png",
      "32": "images/32.png",
      "64": "images/64.png",
      "128": "images/128.png"
    },
    
    "content_scripts": [
        {
          "matches": [
            "https://trello.com/*"
          ],
          "js": [
            "zen_trello.js"
          ],
          "css": [
            "zen_trello.css"
          ]
        }
      ]
}